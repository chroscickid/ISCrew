<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
 
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">



                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    @if (@ViewBag.Title != "Index")
                    {
                        @Html.ActionLink("Administration Web Services", "About", "Home", new { area = "" }, new { @class = "navbar-brand" })
                       
                    }


                    @if (@ViewBag.Title == "About")
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>

                        <li>@Html.ActionLink("Manage Volunteers", "Index", "Volunteer")</li>
                        <li>@Html.ActionLink("Manage Opportunities", "ManageOp", "Home")</li>
                    }

                    else if (@ViewBag.Title == "ManageV" || @ViewBag.Title == "Search" || @ViewBag.Title == "MethodFilter" || ViewBag.Message == "VMatch" || ViewBag.Title == "DetailsMatchV")
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>

                        <li>@Html.ActionLink("Volunteer Filters", "MethodFilter", "Volunteer")</li>
                        <li>@Html.ActionLink("Search Volunteers", "Search", "Volunteer")</li>
                        <li>@Html.ActionLink("Volunteer Matches", "VMatchRedirect", "Volunteer")</li>
                        <li>@Html.ActionLink("Edit Volunteers", "EditRedirect", "Volunteer")</li>
                        <li>@Html.ActionLink("Add Volunteers", "Create", "Volunteer")</li>
                    }

                    else if (@ViewBag.Title == "ManageOp" || @ViewBag.Title == "OSearch" || @ViewBag.Title == "OMethodFilter" || ViewBag.Title == "OMethodFilter2" || ViewBag.Message == "OMatch" || ViewBag.Title == "DetailsMatchU")
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>

                        <li>@Html.ActionLink("Opportunity Filters", "OMethodFilter", "Volunteer")</li>
                        <li>@Html.ActionLink("Search Opportunities", "OSearch", "Volunteer")</li>
                        <li>@Html.ActionLink("Opportunity Match", "OMatchRedirect", "Volunteer")</li>
                        <li>@Html.ActionLink("Edit Opportunity", "OEditRedirect", "Volunteer")</li>
                        <li>@Html.ActionLink("Add Opportunity", "CreateOp", "Volunteer")</li>
                        <li>@Html.ActionLink("Delete Opportunity", "ODeleteRedirect", "Volunteer")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
